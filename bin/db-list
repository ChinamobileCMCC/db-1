#!/usr/bin/env sh

bin=$(dirname "$0")
. "${bin}/include/all"

what="dumps"
if [ "$#" -ge 3 ]; then
  what="${3}"
fi

if [ "${3}" = "--help" ]; then
  echo "SYNTAX: ${COLOR_LIGHT_BLUE}db list [server]${COLOR_NC}"
  echo "Prints a list of recorded database dumps"
  exit 1
fi

for s in ${servers}
do
  echo "[${COLOR_YELLOW}${s}${COLOR_NC}]"
  ls -t1 "${repository}/${s}/dumps" | sed -e 's/\.gz$//'
  echo ""
done
