#!/usr/bin/env sh

bin=$(dirname "$0")
. "${bin}/include/all"
snapshot="${3}"

find_snapshot "${snapshot}"

if [ -f "${file}" ]; then
  rm "${file}"
  echo "${colored_shortname}Removed snapshot ${COLOR_LIGHT_BLUE}${snapshot}${COLOR_NC}"
  exit 0
else
  echo "${colored_shortname}Cannot remove ${COLOR_LIGHT_BLUE}${snapshot}${COLOR_NC} - snapshot does not exist"
  exit 1
fi
