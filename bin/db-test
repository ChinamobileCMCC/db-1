#!/bin/sh

bin=$(dirname $0)
source "${bin}/include/all"

if [ "${3}" == "--help" ]; then
  echo "SYNTAX: ${COLOR_LIGHT_BLUE}db test [server shortname]${COLOR_NC}"
  echo "Tries to connect to the provided database server"
  exit 1
fi

echo "${colored_shortname}"
${bin}/drivers/${databasetype}/test/${connectiontype} $*
exit $?