#!/usr/bin/env sh

bin=$(dirname "$0")
. "${bin}/include/all"

if [ -z "${2}" ]; then
  echo "USAGE:"
  echo "    ${COLOR_LIGHT_BLUE}db test [server alias]${COLOR_NC}"
  echo ""
  echo "Tries to connect to the provided database server"
  exit 1
fi

echo "${colored_alias}"
"${bin}/drivers/${databasetype}/connectors/${connectiontype}/test" "$@"
exit $?