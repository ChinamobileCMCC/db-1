#!/usr/bin/env sh
trap ctrl_c INT

repository="." # make sure that it's defined
ctrl_c()
{
  # Try to remove repository if this script is interrupted
  # Will silently fail if repository is not empty
  rmdir "${repository}" 2>/dev/null
  exit 1
}

bin=$(dirname "$0")
. "${bin}/include/all"

if [ ! -d "${repository}" ]; then
  mkdir -p "${repository}"
else
  echo "[${COLOR_LIGHT_RED}Warning${COLOR_NC}] Cannot (re)initialize repository - repository already exists"
  exit 1
fi

type="${3}"
if [ -z "${type}" ]; then
  type="mysql"
else
  shift
fi
supported=$(find "${bin}/drivers" -type d -d 1 | rev | cut -d '/' -f 1 | rev)

while true; do
  if [ "$#" -lt 3 ]; then

    echo ""
    echo "${COLOR_LIGHT_BLUE}Please provide the database type for this repository${COLOR_NC}"
    echo "Supported types: ${supported}"
    echo ""
    user_input "Database type" "" "${type}" 0
    type=${answer}

  fi

  if [ -d "${bin}/drivers/${type}" ]; then
    echo "${type}" > "${repository}/type"
    "${bin}/../db" server add
    exit $?
  fi

done
